<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="7"
    android:layout_marginLeft="3.5dp"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/displayText"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50dip"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/leftBracket"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:onClick="handleClickSuperTop"
        android:text="("
        android:tag="1"
        android:textSize="26sp"
        tools:ignore="OnClick"
        />
    <Button
        android:id="@+id/rightBracket"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:onClick="handleClickSuperTop"
        android:text=")"
        android:tag="2"
        android:textSize="26sp"
        tools:ignore="OnClick"
        />
    <Button
        android:id="@+id/sqrt"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:onClick="handleClickSuperTop"
        android:text="âˆš"
        android:tag="3"
        android:textSize="26sp"
        tools:ignore="OnClick"
        />
    <Button
        android:id="@+id/square"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:onClick="handleClickSuperTop"
        android:text="X^2"
        android:tag="4"
        android:textSize="26sp"
        tools:ignore="OnClick"
        />


    <Button
        android:id="@+id/toZero"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:onClick="handleClickTop"
        android:text="AC"
        android:tag="1"
        android:textSize="26sp"
        tools:ignore="OnClick" />

    <Button
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:id="@+id/negation"
        android:text="-/+"
        android:tag="2"
        android:textSize="26sp"
        android:onClick="handleClickTop"
        tools:ignore="OnClick" />

    <Button
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:id="@+id/percent"
        android:text="%"
        android:tag="3"
        android:textSize="26sp"
        android:onClick="handleClickTop"
        tools:ignore="OnClick" />

    <Button
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:id="@+id/divide"
        android:text="/"
        android:tag="1"
        android:textSize="26sp"
        android:onClick="handleClickRight"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/seven"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:text="7"
        android:tag="7"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick" />

    <Button
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:id="@+id/eight"
        android:text="8"
        android:tag="8"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:id="@+id/nine"
        android:text="9"
        android:tag="9"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:id="@+id/multiple"
        android:text="*"
        android:tag="2"
        android:textSize="26sp"
        android:onClick="handleClickRight"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/four"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:text="4"
        android:tag="4"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/five"
        android:text="5"
        android:tag="5"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/six"
        android:text="6"
        android:tag="6"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/sub"
        android:text="-"
        android:tag="3"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickRight"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/one"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:text="1"
        android:tag="1"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/two"
        android:text="2"
        android:tag="2"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/three"
        android:text="3"
        android:tag="3"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/add"
        android:text="+"
        android:tag="4"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickRight"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/zero"
        android:layout_height="88dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="0"
        android:tag="0"
        android:textSize="26sp"
        android:onClick="handleClickNum"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/dot"
        android:text="."
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickDot"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/equal"
        android:text="="
        android:tag="5"
        android:layout_height="88dp"
        android:layout_width="96dp"
        android:textSize="26sp"
        android:onClick="handleClickRight"
        tools:ignore="OnClick"/>

</GridLayout>
